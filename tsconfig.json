{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "rootDir": "src",
    "outDir": "dist",

    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,

    "noEmit": false,
    "allowJs": false,
    "incremental": true,

    "lib": ["ES2020"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
